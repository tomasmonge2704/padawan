---
import "@fontsource-variable/inter";
import Header from "~/components/header.astro";
import Home from "~/components/home.astro";
import OurWay from "~/components/ourWay.astro";
import OurServices from "~/components/ourServices.astro";
import OurMetodology from "~/components/ourMetodologhy.astro";
import OurTeam from "~/components/ourTeam.astro";
import AboutUs from "~/components/aboutUs.astro";
import "~/styles/index.css";
import {textEs} from "../lang/es";
import {textEn} from "../lang/en";
const { generator, site } = Astro;
const image = new URL("logo.png", site);
const idioma = "EN";
---

<!doctype html>
<html
  lang="en"
  class="h-full w-full motion-safe:scroll-smooth"
  data-theme="dark"
>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link href="https://fonts.cdnfonts.com/css/star-wars" rel="stylesheet" />
    <meta name="generator" content={generator} />
    <title>Padawan</title>
    <meta
      name="description"
      content={idioma == "EN" ? textEn.home : textEs.home}
    />

    <!-- social media -->
    <meta property="og:title" content="Astro" />
    <meta property="og:type" content="website" />
    <meta
      property="og:description"
      content={idioma == "EN" ? textEn.home : textEs.home}
    />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body
    class="h-full w-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header />
    <Home homeText={idioma == "EN" ? textEn.home : textEs.home} />
    <div class="space-y-24 px-8 py-32">
      <OurWay textOurWay={idioma == "EN" ? textEn : textEs} />
      <OurServices textOurServices={idioma == "EN" ? textEn : textEs} />
      <OurMetodology textOurMetodology={idioma == "EN" ? textEn : textEs} />
      <OurTeam textOurTeam={idioma == "EN" ? textEn : textEs} />
    </div>
    <AboutUs textContactUs={idioma == "EN" ? textEn : textEs} />
    
  </body>
</html>

<script>
  // Esperar a que el DOM esté completamente cargado antes de agregar event listeners
  document.addEventListener("DOMContentLoaded", function() {
    // Event listener para el botón con ID "#botonEs"
    const botonEs = document.getElementById("botonEs");
    if (botonEs) {
      botonEs.addEventListener("click", function() {
        localStorage.setItem('lang', "ES");
      });
    }

    // Event listener para el botón con ID "#botonEn"
    const botonEn = document.getElementById("botonEn");
    if (botonEn) {
      botonEn.addEventListener("click", function() {
        localStorage.setItem('lang', "EN");
      });
    }
  });
</script>

