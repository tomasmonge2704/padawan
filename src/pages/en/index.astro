---
import "@fontsource-variable/inter";
import Header from "~/components/header.astro";
import Home from "~/components/home.astro";
import OurWay from "~/components/ourWay.astro";
import OurServices from "~/components/ourServices.astro";
import OurMetodology from "~/components/ourMetodologhy.astro";
import OurTeam from "~/components/ourTeam.astro";
import AboutUs from "~/components/aboutUs.astro";
import "~/styles/index.css";
import {textEn} from "../../lang/en";
---

<!doctype html>
<html
  lang="en"
  class="h-full w-full motion-safe:scroll-smooth"
  data-theme="dark"
>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="apple-touch-icon" sizes="57x57" href="/apple-icon-57x57.png">
  <link rel="apple-touch-icon" sizes="60x60" href="/apple-icon-60x60.png">
  <link rel="apple-touch-icon" sizes="72x72" href="/apple-icon-72x72.png">
  <link rel="apple-touch-icon" sizes="76x76" href="/apple-icon-76x76.png">
  <link rel="apple-touch-icon" sizes="114x114" href="/apple-icon-114x114.png">
  <link rel="apple-touch-icon" sizes="120x120" href="/apple-icon-120x120.png">
  <link rel="apple-touch-icon" sizes="144x144" href="/apple-icon-144x144.png">
  <link rel="apple-touch-icon" sizes="152x152" href="/apple-icon-152x152.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-icon-180x180.png">
  <link rel="icon" type="image/png" sizes="192x192"  href="/android-icon-192x192.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
<!-- HTML Meta Tags -->
<title>Padawan</title>
<meta
property="og:description"
content={textEn.home}>
<meta property="og:image" content="https://padawanway.com/img-Meta-Tags-Card.png">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">

<!-- Facebook Meta Tags -->
<meta property="og:url" content="https://padawanway.com/">
<meta property="og:title" content="Padawan">
<meta property="og:type" content="website">
  <meta
    property="og:description"
    content={textEn.home}>
<meta property="og:image" content="https://padawanway.com/img-Meta-Tags-Card.png">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">

<!-- Twitter Meta Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta property="twitter:domain" content="padawanway.com">
<meta property="twitter:url" content="https://padawanway.com/">
<meta name="twitter:title" content="Padawan">
<meta
property="og:description"
content={textEn.home}>
<meta property="og:image" content="https://padawanway.com/img-Meta-Tags-Card.png">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">

</head>
  <body
    class="h-full w-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header idioma="en" />
    <Home homeText={textEn.home} />
    <div class="space-y-24 px-8 py-32">
      <OurWay textOurWay={textEn} />
      <OurServices textOurServices={textEn} />
      <OurMetodology textOurMetodology={textEn} />
      <OurTeam textOurTeam={textEn} />
    </div>
    <AboutUs textContactUs={textEn} />
    
  </body>
</html>

<script>
  // Esperar a que el DOM esté completamente cargado antes de agregar event listeners
  document.addEventListener("DOMContentLoaded", function() {
    // Event listener para el botón con ID "#botonEs"
    const botonEs = document.getElementById("botonEs");
    if (botonEs) {
      botonEs.addEventListener("click", function() {
        localStorage.setItem('lang', "ES");
      });
    }

    // Event listener para el botón con ID "#botonEn"
    const botonEn = document.getElementById("botonEn");
    if (botonEn) {
      botonEn.addEventListener("click", function() {
        localStorage.setItem('lang', "EN");
      });
    }
  });
</script>

